<p id="notice"><%= notice %></p>

<% if current_user.doctor? %>
<h1>Doctor's profile</h1>
<% elsif current_user.admin? %>
<h1>Doctor profiles</h1>
<%end %>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Field</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
        <%= form_tag(doctors_path, method: :get) do %>
        <%= text_field_tag :term, params[:term] %>
        <%= submit_tag 'Search by name', name: nil %>
        <% end %>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.user.firstname %></td>
        <td><%= doctor.user.lastname %></td>
        <td><%= doctor.field %></td>
        <td><%= link_to 'Show', doctor %></td>
        <% if !current_user.patient? %>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <% elsif current_user.admin? %>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Prescriptions', 'prescriptions' %>
<%= link_to 'Medical history', 'patient_histories' %>
