<p id="notice"><%= notice %></p>

<h1>Patient Histories</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Medical history</th>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient_histories.each do |patient_history| %>
      <tr>
        <td><%= patient_history.created_at.strftime("%m/%d/%Y %H:%M") %></td>
        <td><%= patient_history.medical_history %></td>
        <td><%= patient_history.patient_profile.user.firstname %></td>
        <td><%= patient_history.patient_profile.user.lastname %></td>
        <td><%= link_to 'Show', patient_history %></td>
        <% if !current_user.doctor? %>
        <td><%= link_to 'Edit', edit_patient_history_path(patient_history) %></td>
        
        <%elsif current_user.admin?%>
        <td><%= link_to 'Destroy', patient_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
        <td><%= link_to 'Show Patient\'s profile', patient_profile_path(patient_history.patient_profile_id) %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>
<td><%= link_to 'New Medical History', new_patient_history_path if current_user.patient?%></td>
<%= link_to 'Prescriptions', 'prescriptions' %>

