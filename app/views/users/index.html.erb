<p id="notice"><%= notice %></p>
<h1>User profiles</h1>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= form_tag(users_path, method: :get) do %>
        <%= text_field_tag :term, params[:term] %>
        <%= submit_tag 'Search by name', name: nil %>
        <% end %>
    <% @users.each do |u| %>
      <tr>
        
        <td><%= u.firstname %></td>
        <td><%= u.lastname %></td>
        <td><%= u.email %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Destroy', users_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>


