<p id="notice"><%= notice %></p>

<h1>Diagnoses</h1>

<div class="table-responsive">
<table class="table table-hover table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Patient</th>
      <th>Doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>


    <% @diagnosis.each do |diagnosis| %>
      <tr>
        <td><%= diagnosis.title %></td>
        <td><%= diagnosis.description %></td>
        <td><%=diagnosis.created_at %></td>
        <td><%= diagnosis.patient_profile.user.full_name %></td>
        <td><%= diagnosis.doctor.user.full_name %></td>
        <td><%= link_to 'Show', diagnosis, class: 'btn btn-info' %></td>
        <% if !current_user.patient? %>
        <td><%= link_to 'Edit', edit_diagnosis_path(diagnosis), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', diagnosis, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <%end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<% if !current_user.patient? %>
<%= link_to 'New Diagnosis', new_diagnosis_path, class: 'btn btn-primary' %>
<% end%>
