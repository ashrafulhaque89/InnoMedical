<p id="notice"><%= notice %></p>

<h1>Diagnoses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Patient's name</th>
      <th>Doctor's name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diagnosis.each do |diagnosis| %>
      <tr>
        <td><%= diagnosis.title %></td>
        <td><%= diagnosis.description %></td>
        <td><%=diagnosis.created_at %></td>
        <td><%= diagnosis.patient_profile.user.full_name %></td>
        <td><%= diagnosis.doctor.user.full_name %></td>
        <td><%= link_to 'Show', diagnosis %></td>
        <% if !current_user.patient? %>
        <td><%= link_to 'Edit', edit_diagnosis_path(diagnosis) %></td>
        <td><%= link_to 'Destroy', diagnosis, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if !current_user.patient? %>
<%= link_to 'New Diagnosis', new_diagnosis_path, class: 'btn btn-primary' %>
<% end%>
