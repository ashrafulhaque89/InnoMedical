<% if user_signed_in? %>
<p id="notice"><%= notice %></p>
<h1>Schedules</h1>

<div class="table-responsive">
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Start</th>
      <th>End</th>
      <th>Cost</th>
      <th>Booked</th>
      <th>Doctor</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <% if !current_user.patient? %>
        <% if schedule.booked==true %>
            <td><%= schedule.title %></td>
            <td><%= schedule.start %></td>
            <td><%= schedule.end %></td>
            <td><%= schedule.cost %></td>
            <td><%= schedule.booked %></td>
            <td><%=schedule.doctor.user.full_name %></td>

            <td><%= link_to 'Show', schedule %></td>
            <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
            <% if current_user.admin? %>
            <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' }%> </td>
            <%end%>
            <%end%>
        <%else%>
          <% if schedule.booked==true %>
            <td><%= schedule.title %></td>
            <td><%= schedule.start %></td>
            <td><%= schedule.end %></td>
            <td><%= schedule.cost %></td>
            <td><%= schedule.booked %></td>
            <td><%=schedule.doctor.user.full_name %></td>
              <td><%= link_to 'Pay', "charges/new", class: 'btn btn-secondary' %></td>
          <% end %>
        <%end%>

      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
<% if current_user.doctor? %>
    <%= link_to 'New Schedule', new_schedule_path, class: 'btn btn-primary' %>
    <%= link_to 'Free Appointments', schedules_path, class: 'btn btn-primary' %>
    <%= link_to 'Go Back', doctors_path, class: 'btn btn-primary' %>
<%elsif current_user.patient?%>
    <%= link_to 'Free Appointments', schedules_path, class: 'btn btn-primary' %>
    <%= link_to 'Go Back', doctors_path, class: 'btn btn-primary' %>
<%end%>
<%end%>
