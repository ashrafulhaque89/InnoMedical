
<% if user_signed_in? %>


<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start</th>
      <th>End</th>
      <th>Cost</th>
      <th>Booked</th>
      <th>Doctor's name</th>
      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <% if !current_user.patient? %>
        <% if schedule.booked==true %>
            <td><%= schedule.title %></td>
            <td><%= schedule.start %></td>
            <td><%= schedule.end %></td>
            <td><%= schedule.cost %></td>
            <td><%= schedule.booked %></td>
            <td><%=schedule.doctor.user.full_name %></td>
         
            <td><%= link_to 'Show', schedule %></td>
            <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
            <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' }%> </td>
            <%end%>
        <%else%>
          <% if schedule.booked==true %>
            <td><%= schedule.title %></td>
            <td><%= schedule.start %></td>
            <td><%= schedule.end %></td>
            <td><%= schedule.cost %></td>
            <td><%= schedule.booked %></td>
            <td><%=schedule.doctor.user.full_name %></td>
            <td><%=schedule.patient_profile_id%></td>
            
          <% end %>
        <%end%>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.doctor? %>
    <%= link_to 'New Schedule', new_schedule_path %>
    <%= link_to 'Free Appointments', schedules_path %>
    <%= link_to 'Back', doctors_path %>
<%elsif current_user.patient?%>
    <%= link_to 'Free Appointments', schedules_path %>
    <%= link_to 'Back', doctors_path %>
<%end%>
<%end%>

